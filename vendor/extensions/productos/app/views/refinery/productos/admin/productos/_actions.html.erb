<ul>
  <% if ::Refinery::Productos::Admin::ProductosController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.productos_admin_productos_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_productos_admin_producto_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Productos::Admin::ProductosController.sortable? && ::Refinery::Productos::Producto.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.productos_admin_productos_path,
                     t('.reorder', what:  "Productos"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.productos_admin_productos_path,
                      t('.reorder_done', what: "Productos"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
