<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="productos">
      <% @productos.each do |producto| %>
        <li>
          <%= link_to producto.nombre, refinery.productos_producto_path(producto) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
