    <article>
      <%= image_tag 'categorias/icoworking.jpg' %>
      <span class="title">Nombre del Producto</span>
      <spanc class="tagline">S/. 250.00</span>
    </article>
    <article>
      <%= image_tag 'categorias/ilamps.jpg' %>
      <span class="title">Nombre del Producto</span>
      <spanc class="tagline">S/. 300.00</span>
